@model List<HMCSnacks.Models.CartItem>

@{
    ViewData["Title"] = "Checkout";
}

<a class="btn btn-secondary mb-3" asp-controller="Product" asp-action="ViewCart">Back to Cart</a>
<h2>Checkout Summary</h2>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>₹@item.Price</td>
                <td>@item.Quantity</td>
                <td>₹@(item.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">Total:</th>
            <th>₹ @ViewBag.Total</th>
        </tr>
    </tfoot>
</table>

<!-- Place Order Button -->
<button class="btn btn-primary" onclick="showTerms()">Place Order</button>

<!-- Terms & Address Selection Modal -->
<div id="termsModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form method="post" asp-action="PlaceOrder">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delivery Address</h5>
                </div>
                <div class="modal-body">
                    <p>Select the address for delivery:</p>
                    <div class="mb-3">
                        <select class="form-control" name="SelectedAddress" required>
                            <option value="">-- Select Address --</option>
                            @foreach (var address in ViewBag.Addresses as SelectList)
                            {
                                <option value="@address.Text">@address.Text</option>
                            }
                        </select>
                    </div>
                    <p>By placing this order, you agree to our terms and conditions.</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Agree & Place Order</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showTerms() {
            var modal = new bootstrap.Modal(document.getElementById('termsModal'));
            modal.show();
        }
    </script>
}
