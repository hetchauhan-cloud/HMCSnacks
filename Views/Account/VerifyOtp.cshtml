@model HMCSnacks.Models.VerifyOtp
@{
    ViewData["Title"] = "Verify OTP";
    Layout = null; // Full-screen layout like login/forgot
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Verify OTP - HMC Snacks</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Login.css" /> <!-- Reusing existing login styles -->
</head>
<body>

    <div class="login-wrapper">
        <div class="login-container text-center">
            <img src="~/images/HMCSnacks.png" alt="HMC Snacks Logo" class="brand-logo" />
            <div class="brand-title">HMC Snacks</div>
            <div class="tagline">Taste the Goodness</div>

            <h5 class="text-center text-primary mb-3">Verify Your OTP</h5>

            @if (TempData["OtpError"] != null)
            {
                <div class="alert alert-danger">@TempData["OtpError"]</div>
            }

            <form asp-action="VerifyOtp" method="post" class="text-start">
                <div class="mb-3">
                    <label asp-for="Otp" class="form-label">Enter OTP</label>
                    <input asp-for="Otp" class="form-control" />
                    <span asp-validation-for="Otp" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Verify OTP</button>

                <div class="mt-3 text-center">
                    <a href="@Url.Action("Login", "Account")">← Back to Login</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
