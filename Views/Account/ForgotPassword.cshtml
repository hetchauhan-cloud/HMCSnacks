@model HMCSnacks.Models.ForgotPassword
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null; // Disable layout for full screen view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Forgot Password - HMC Snacks</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Login.css" /> <!-- Reusing Login CSS for consistency -->
</head>
<body>

    <div class="login-wrapper">
        <div class="login-container text-center">
            <img src="~/images/HMCSnacks.png" alt="HMC Snacks Logo" class="brand-logo" />
            <div class="brand-title">HMC Snacks</div>
            <div class="tagline">Taste the Goodness</div>

            <h5 class="text-center text-warning mb-3">Forgot Your Password?</h5>

            @if (TempData["OtpSent"] != null)
            {
                <div class="alert alert-success">@TempData["OtpSent"]</div>
            }

            <form asp-action="ForgotPassword" method="post" class="text-start">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Enter your registered email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning w-100">Send OTP</button>

                <div class="mt-3 text-center">
                    <a href="@Url.Action("Login", "Account")">← Back to Login</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
