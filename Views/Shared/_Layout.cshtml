@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var hideLayout = currentController == "Account" && (currentAction == "Login" || currentAction == "Register");
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
    var name = HttpContextAccessor.HttpContext?.Session.GetString("Name");
    var role = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HMC Snacks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HMCSnacks.styles.css" asp-append-version="true" />
</head>
<body>

    @* ✅ Show Navbar only if not Login/Register *@
    @if (!hideLayout)
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm py-2">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="~/images/HMCSnacks.png" alt="HMC Snacks Logo" style="height: 40px; width: auto;" class="me-2" />
                    <span class="fw-bold text-dark">HMC Snacks</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                    <ul class="navbar-nav align-items-center">
                        @if (string.IsNullOrEmpty(username))
                        {
                            if (currentAction != "Login")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
                                </li>
                            }
                            if (currentAction != "Register")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Register", "Account")">Register</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-success" href="@Url.Action("OrderReports", "Order")">📄 Order Reports</a>
                            </li>

                            @if (role == "User"){
                            <li class="nav-item">
                                <a class="nav-link text-success" href="@Url.Action("Index", "Product")">Explore Products</a>
                            </li>
                            }

                            @if (role == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-primary" href="@Url.Action("OrderReports", "Order")">Admin Panel</a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="productDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Product
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="productDropdown">
                                        <li><a class="dropdown-item" asp-controller="Product" asp-action="AddProduct">Add Product</a></li>
                                        <li><a class="dropdown-item" asp-controller="Product" asp-action="ProductList">Product List</a></li>
                                    </ul>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    👋 Welcome, <strong>@name</strong>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="UpdateProfile">Update Profile</a></li>
                                    <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">Logout</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    }

    <!-- 🧾 Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* ✅ Footer - also hidden on Login/Register *@
    @if (!hideLayout)
    {
        <footer class="border-top footer text-muted mt-4">
            <div class="container">
                All rights Reserved. - &copy; 2025
            </div>
        </footer>
    }

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
